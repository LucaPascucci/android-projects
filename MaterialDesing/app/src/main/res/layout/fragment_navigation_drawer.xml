<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigationDrawerFragment"
    tools:context="it.lucapascucci.materialdesing.fragments.NavigationDrawerFragment">
    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent">
        <ImageView
            android:id="@+id/imageDrawer"
            android:layout_marginTop="0dp"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_abstract"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/containerDrawerImage"
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
